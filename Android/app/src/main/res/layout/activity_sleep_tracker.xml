<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleepTrackerActivity">

    <Button
        android:id="@id/toggleSleepButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Start Sleep"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="99dp"
        android:layout_gravity="center"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/sleepDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleSleepButton"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:background="@drawable/red_background"
        android:padding="12dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/fellAsleepTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepDurationTextView"
        android:layout_gravity="center"
        android:background="@drawable/pink_background"
        android:textSize="24sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/wokeUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fellAsleepTextView"
        android:layout_gravity="center"
        android:background="@drawable/magenta_background"
        android:textSize="24sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/timeAwakeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wokeUpTextView"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:background="@drawable/purple_background"
        android:padding="12dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/home"
        app:backgroundTint="#D8D8D8"
        app:fabSize="normal"
        android:layout_marginBottom="256dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>